{
  "expo": {
    "name": "SafeHer",
    "slug": "safeher",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "safeher",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "Your safety is our priority - A comprehensive safety app for women",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.safeher.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#F472B6"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.safeher.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#F472B6"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "This app needs access to location for emergency alerts and safety features."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
